{
  "mode": "mainnet_fork",
  "networks": [
    "arbitrum",
    "polygon"
  ],
  "tokens": [
    "WETH",
    "USDC",
    "DAI"
  ],
  "dexes": [
    "uniswap_v3",
    "curve",
    "balancer"
  ],
  "fork_block_number": 0,
  "run_time_seconds": 600,
  "slippage_tolerance": 0.005,
  "execution_timeout_ms": 5000,
  "batch_trades": true,
  "batch_size": 10,
  "gas_strategy": "dynamic",
  "dynamic_gas_adjustment": true,
  "modules": [
    "all"
  ],
  "output_dir": "results",
  "debug": false,
  "trade_selection": {
    "min_historical_trades": 5,
    "min_success_rate": 0.4,
    "min_expected_profit": 2.0,
    "confidence_weight": 0.3,
    "success_rate_weight": 0.5,
    "profit_weight": 0.2,
    "gas_cost_threshold": {
      "ethereum": 20.0,
      "arbitrum": 1.5,
      "polygon": 0.5,
      "optimism": 1.0,
      "bsc": 0.8
    },
    "network_preferences": {
      "arbitrum": 1.2,
      "polygon": 1.3,
      "ethereum": 0.8,
      "bsc": 0.9,
      "optimism": 1.0
    },
    "token_pair_preferences": {
      "WETH-USDC": 1.3,
      "WETH-DAI": 1.1,
      "WBTC-USDC": 1.0,
      "WMATIC-USDC": 1.2,
      "LINK-WETH": 0.9
    },
    "dex_preferences": {
      "uniswap_v3": 1.2,
      "sushiswap": 1.0,
      "curve": 1.1,
      "balancer": 0.9,
      "quickswap": 1.1
    },
    "batch_size_by_network": {
      "ethereum": 8,
      "arbitrum": 5,
      "polygon": 4,
      "optimism": 5,
      "bsc": 6
    },
    "gas_strategy_by_network": {
      "ethereum": "conservative",
      "arbitrum": "aggressive",
      "polygon": "aggressive",
      "optimism": "dynamic",
      "bsc": "dynamic"
    },
    "historical_data_path": "data/trade_history.json",
    "mongodb_enabled": false,
    "mongodb_uri": "mongodb://localhost:27017/",
    "mongodb_db": "arbitragex",
    "mongodb_collection": "trade_history",
    "networks": [
      "polygon",
      "arbitrum"
    ],
    "tokens": [
      "WETH",
      "USDC",
      "DAI"
    ],
    "dexes": [
      "uniswap_v3",
      "balancer",
      "curve"
    ],
    "thresholds": {
      "min_profit_usd": 20,
      "min_profit_after_gas_percentage": 70,
      "dynamic": {
        "high_congestion": {
          "min_profit_usd": 35,
          "min_profit_after_gas_percentage": 80
        },
        "low_congestion": {
          "min_profit_usd": 15,
          "min_profit_after_gas_percentage": 60
        }
      }
    },
    "priority_pairs": [
      {
        "network": "polygon",
        "pair": "WETH-DAI",
        "dex": "uniswap_v3",
        "weight": 1.0
      },
      {
        "network": "arbitrum",
        "pair": "WETH-DAI",
        "dex": "curve",
        "weight": 0.9
      },
      {
        "network": "polygon",
        "pair": "WETH-USDC",
        "dex": "balancer",
        "weight": 0.85
      }
    ]
  },
  "mev_protection": {
    "flashbots_enabled": true,
    "private_tx_enabled": true,
    "pending_tx_analysis_enabled": true,
    "flashbots_relay_url": "https://relay.flashbots.net",
    "flashbots_auth_key": "${FLASHBOTS_AUTH_KEY}",
    "private_tx_providers": {
      "ethereum": "https://api.blocknative.com/v1",
      "arbitrum": "https://arbitrum-api.blocknative.com/v1",
      "polygon": "https://polygon-api.blocknative.com/v1"
    },
    "private_tx_api_keys": {
      "blocknative": "${BLOCKNATIVE_API_KEY}"
    },
    "gas_price_multipliers": {
      "normal": 1.0,
      "fast": 1.3,
      "urgent": 1.8
    },
    "max_gas_price_gwei": {
      "ethereum": 250,
      "arbitrum": 1.2,
      "polygon": 400,
      "optimism": 1.5,
      "bsc": 10
    },
    "mev_risk_thresholds": {
      "low": {
        "competing_txs": 0,
        "gas_multiplier": 1.0
      },
      "medium": {
        "competing_txs": 3,
        "gas_multiplier": 1.3
      },
      "high": {
        "competing_txs": 5,
        "gas_multiplier": 1.8
      }
    },
    "network_specific_settings": {
      "ethereum": {
        "use_flashbots": true,
        "min_profit_threshold_multiplier": 1.5
      },
      "arbitrum": {
        "use_flashbots": false,
        "min_profit_threshold_multiplier": 1.2
      },
      "polygon": {
        "use_flashbots": false,
        "min_profit_threshold_multiplier": 1.1
      }
    },
    "token_pair_risk_factors": {
      "WETH-USDC": 1.5,
      "WETH-DAI": 1.3,
      "WBTC-USDC": 1.2,
      "WMATIC-USDC": 1.0,
      "LINK-WETH": 1.1
    },
    "rpc_urls": {
      "ethereum": "${ETHEREUM_RPC_URL}",
      "arbitrum": "${ARBITRUM_RPC_URL}",
      "polygon": "${POLYGON_RPC_URL}",
      "optimism": "${OPTIMISM_RPC_URL}",
      "bsc": "${BSC_RPC_URL}"
    },
    "network_settings": {
      "polygon": {
        "protection_level": "medium",
        "use_flashbots": false,
        "priority_fee_strategy": "dynamic"
      },
      "arbitrum": {
        "protection_level": "high",
        "use_flashbots": true,
        "priority_fee_strategy": "aggressive_for_high_value"
      }
    }
  }
}