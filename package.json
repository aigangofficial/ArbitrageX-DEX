{
  "name": "arbitragex",
  "version": "1.0.0",
  "description": "ArbitrageX - Automated Cross-DEX Arbitrage Trading System",
  "main": "dist/api/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/api/server.js",
    "start:dev": "ts-node-dev --respawn --transpile-only backend/api/server.ts",
    "dev": "ts-node-dev --respawn --transpile-only backend/api/server.ts",
    "test": "ts-mocha test/**/*.test.ts",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md,sol}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md,sol}\"",
    "format:sol": "prettier --write \"contracts/**/*.sol\"",
    "prepare": "npm run build",
    "precommit": "npm run lint && npm run format:check",
    "compile": "hardhat compile",
    "deploy:testnet": "hardhat run scripts/deploy-phase1.ts --network sepolia",
    "deploy:mainnet": "hardhat run scripts/deploy-phase1.ts --network mainnet",
    "verify": "hardhat verify",
    "verify:structure": "NODE_OPTIONS='--loader ts-node/esm' ts-node verify_structure.ts",
    "generate:wallet": "ts-node scripts/generate-wallet.ts",
    "check-amoy": "ts-node scripts/check-amoy.ts",
    "check:mumbai": "node scripts/check-mumbai.js",
    "check:balance": "ts-node scripts/check-balance.ts",
    "deploy": "ts-node scripts/deploy.ts",
    "deploy:sepolia": "hardhat run scripts/deploy.ts --network sepolia",
    "start:api": "ts-node backend/api/server.ts"
  },
  "dependencies": {
    "@aave/core-v3": "1.19.3",
    "@uniswap/v2-core": "1.0.1",
    "@uniswap/v2-periphery": "1.1.0-beta.0",
    "alchemy-sdk": "^3.5.2",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "mongoose": "^8.0.3",
    "node-cron": "^3.0.2",
    "winston": "^3.11.0",
    "ws": "^8.15.1"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.8",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.12",
    "@openzeppelin/contracts": "^4.9.6",
    "@typechain/ethers-v6": "^0.4.0",
    "@typechain/hardhat": "^8.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "chai": "^4.2.0",
    "chalk": "^5.4.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "ethers": "^6.13.5",
    "hardhat": "^2.22.1",
    "hardhat-deploy": "^0.14.0",
    "hardhat-gas-reporter": "^1.0.8",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.6",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.5",
    "prettier-plugin-solidity": "^1.3.1",
    "solidity-coverage": "^0.8.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typechain": "^8.3.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
