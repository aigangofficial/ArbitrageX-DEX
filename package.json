{
  "name": "arbitragex",
  "version": "1.0.0",
  "description": "ArbitrageX - Multi-Chain DEX Arbitrage Platform with AI",
  "main": "index.js",
  "scripts": {
    "prepare": "husky install",
    "setup": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "start": "npm run start:all",
    "start:all": "concurrently \"npm run start:contracts\" \"npm run start:backend\" \"npm run start:frontend\"",
    "start:contracts": "hardhat node",
    "start:backend": "cd backend && npm run start",
    "start:frontend": "cd frontend && npm run start",
    "build": "npm run build:all",
    "build:all": "npm run build:contracts && npm run build:backend && npm run build:frontend",
    "build:contracts": "hardhat compile",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "test": "npm run test:all",
    "test:all": "npm run test:contracts && npm run test:backend && npm run test:frontend",
    "test:contracts": "hardhat test",
    "test:backend": "cd backend && npm run test",
    "test:frontend": "cd frontend && npm run test",
    "lint": "npm run lint:all",
    "lint:all": "npm run lint:ts && npm run lint:sol",
    "lint:ts": "eslint . --ext .ts",
    "lint:sol": "solhint contracts/**/*.sol",
    "format": "prettier --write .",
    "verify": "hardhat verify",
    "deploy:sepolia": "hardhat run scripts/deploy.ts --network sepolia",
    "deploy:mainnet": "hardhat run scripts/deploy.ts --network mainnet",
    "deploy:arbitrum": "hardhat run scripts/deploy.ts --network arbitrum",
    "deploy:base": "hardhat run scripts/deploy.ts --network base",
    "verify:sepolia": "hardhat verify --network sepolia",
    "verify:mainnet": "hardhat verify --network mainnet",
    "verify:arbitrum": "hardhat verify --network arbitrum",
    "verify:base": "hardhat verify --network base",
    "coverage": "hardhat coverage",
    "clean": "hardhat clean",
    "chain": "hardhat node",
    "accounts": "hardhat accounts",
    "balance": "hardhat balance",
    "gas-price": "hardhat gas-price",
    "verify-structure": "ts-node scripts/verify_structure.ts",
    "update-project": "python3 scripts/update_project.py"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/arbitragex.git"
  },
  "keywords": [
    "arbitrage",
    "defi",
    "ethereum",
    "flash-loans",
    "trading-bot",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@chainlink/contracts": "^1.3.0",
    "@uniswap/v2-core": "^1.0.1",
    "@uniswap/v2-periphery": "^1.1.0-beta.0",
    "@uniswap/v3-core": "^1.0.1",
    "dotenv": "^16.4.1",
    "ethers": "^6.9.0"
  },
  "devDependencies": {
    "@aave/core-v3": "^1.18.0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@openzeppelin/contracts": "^4.9.3",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "chai": "^4.3.10",
    "concurrently": "^9.1.2",
    "eslint": "^8.56.0",
    "hardhat": "^2.19.4",
    "hardhat-gas-reporter": "^1.0.9",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4",
    "prettier-plugin-solidity": "^1.3.1",
    "solhint": "^4.1.1",
    "solidity-coverage": "^0.8.5",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.3.3"
  }
}
