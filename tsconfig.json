{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "declaration": true,
    "moduleResolution": "node",
    "allowJs": true,
    "types": ["node", "mocha", "chai"],
    "paths": {
      "*": ["./node_modules/*"]
    }
  },
  "include": ["./tests/**/*.ts", "./scripts/**/*.ts", "./typechain/**/*.ts", "./hardhat.config.ts"],
  "files": ["./hardhat.config.ts"]
}
